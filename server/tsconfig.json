// ./server/tsconfig.json
{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"rootDir": "src",
		"outDir": "dist",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"allowJs": false,
		// "verbatimModuleSyntax": true,
		"allowArbitraryExtensions": false,
		// "allowImportingTsExtensions": true,
		// "noEmit": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts"]
}
